@* Single Food Item Card *@
<div class="item-card">
    <h4>@Name</h4>
    <p><strong>Ingredients:</strong> @Ingredients</p>
    <p class="price">Price: Rs. @Price</p>
</div>

@code {
    [Parameter]
    public string Name { get; set; }

    [Parameter]
    public string Ingredients { get; set; }

    [Parameter]
    public decimal Price { get; set; }
}